<h1>Objectives</h1>


<% if @onboardings_objectives.any? %>
  <table>
    <th>title</th>
    <th>description</th>
    <th>NB steps</th>
    <th>actions</th>
    <% @onboardings_objectives.each do |objective| %>
      <tr>
        <td>
          <%= objective.name %>
        </td>
        <td>
          <%= objective.description[0..100] %>
        </td>
        <td>
          <%= objective.steps.count %>
        </td>
        <td class="btn-group">
          <%= link_to "edit", edit_onboardings_objective_path(objective), class: "btn" %>
          <%= button_to "Delete", objective, method: :delete, class: "btn btn--alert" %>
        </td>
      </tr>
    <% end %>
  </table>

<% else %>
  <h3 style="text-align: center">No Objectives yet</h3>
<% end %>

<%= link_to "New objective", new_onboardings_objective_path, class: 'btn btn--primary' %>
